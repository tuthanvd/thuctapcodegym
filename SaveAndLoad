using System;
using System.Collections.Generic;
using System.Text;
using System.IO;
using System.Runtime.Serialization.Formatters.Binary;

namespace TTNN_gameLine98
{
	class SaveAndLoad
	{
		/*
		sao lưu game vào file sẵn có
		*/
		public static void saveGame(GameShape g, string filename) //lưu game
		{
			Stream s = File.Open(filename, FileMode.Create);
			BinaryFormatter b = new BinaryFormatter();
			b.Serialize(s, g);
			s.Close();
		}
		
		/*
		tải lại game trong file sẵn có
		*/
		public static GameShape loadGame(string filename) //tải lại game
		{
			Stream s = File.Open(filename, FileMode.Open);
			BinaryFormatter b = new BinaryFormatter();
			GameShape g = (GameShape)b.Deserialize(s);
			s.Close();
			return g;
		}
	}
}
